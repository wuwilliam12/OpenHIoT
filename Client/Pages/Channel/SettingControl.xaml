<UserControl x:Class="OpenHIoT.Client.Pages.Channel.SettingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenHIoT.Client.Pages.Channel"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid>
            <StackPanel >
                 <Grid Margin="2">
                    <Label Content="Name"/>
                    <TextBox Text="{Binding Name}" Width="160" HorizontalAlignment="Left" Margin="40,0,0,0" />
                </Grid>               
                <Grid Margin="2">
                    <Label Content="X"/>
                    <TextBox Text="{Binding X}" Width="50" HorizontalAlignment="Left" Margin="40,0,0,0" />
                    <Label Content="Y" Margin="100,0,0,0"/>     
                    <TextBox Text="{Binding Y}" Width="50" HorizontalAlignment="Left" Margin="150,0,0,0" />                   
                </Grid>
                <Grid Margin="2">
                    <Label Content="Width"/>
                    <TextBox Text="{Binding X}" Width="50" HorizontalAlignment="Left" Margin="40,0,0,0" />
                    <Label Content="Height" Margin="100,0,0,0"/>
                    <TextBox Text="{Binding Y}" Width="50" HorizontalAlignment="Left" Margin="150,0,0,0" />
                </Grid>
            </StackPanel>
            <Grid>
                <Button x:Name="okBtn"  Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                     Click="okBtn_Click" Margin="10" BorderThickness="0" Background="Transparent">
                    <Image Source="/Client;component/Images/ok.png" />
                </Button>
                <Button x:Name="cancelBtn" BorderThickness="0"  Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                     Click="cancelBtn_Click"  Margin="10" >
                    <Image Source="/Client;component/Images/cancel.png" />
                </Button>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
